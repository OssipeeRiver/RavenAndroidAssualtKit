<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RavenAndroidAwarenessKit" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/light_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light_blue</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RavenAndroidAwarenessKit.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RavenAndroidAwarenessKit.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RavenAndroidAwarenessKit.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Data card widgets -->
    <dimen name="card_width">250sp</dimen>
    <dimen name="card_height">100sp</dimen>
    <dimen name="card_margin">20sp</dimen>
    <dimen name="card_elevation">5sp</dimen>
    <dimen name="card_corner_radius">5sp</dimen>

    <style name="locationDataWidgetHeader">
        <item name="android:paddingStart">10sp</item>
        <item name="android:paddingTop">5sp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="locationDataWidgetContent">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:gravity">center</item>
    </style>
</resources>